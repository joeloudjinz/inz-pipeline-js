{
  "name": "@inz/pipeline",
  "version": "0.9.1",
  "description": "Small, slightly opinionated Typescript library designed to simplify complex business logic. It helps you break down intricate processes into a sequence of simple steps using a clean API.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:test": "tsc -p tsconfig.test.json",
    "lint": "eslint src/**/*.ts",
    "prebuild": "rm -rf dist",
    "test-build": "npx ts-node test-build.ts",
    "build:examples": "tsc -p examples/tsconfig.json",
    "example:dummy-app": "npx ts-node examples/dummy-app/dummy-app.ts"
  },
  "keywords": [
    "pipeline",
    "data-processing",
    "typescript",
    "workflow",
    "orchestration",
    "async",
    "processing",
    "pipeline-pattern",
    "error-handling",
    "retry",
    "fallback",
    "circuit-breaker",
    "parallel-processing",
    "conditional-execution",
    "sub-pipeline",
    "performance-monitoring"
  ],
  "author": {
    "name": "Abdellah Addoun - JoeInz",
    "url": "https://github.com/joeloudjinz"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/joeloudjinz/inz-pipeline-js.git"
  },
  "bugs": {
    "url": "https://github.com/joeloudjinz/inz-pipeline-js/issues"
  },
  "homepage": "https://github.com/joeloudjinz/inz-pipeline-js#README"
